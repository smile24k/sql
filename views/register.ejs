<%- include header %>
<div class="col-md-4 col-md-offset-4">
    <div class="login-panel panel panel-default">
        <div class="panel-heading">
            <h3 class="panel-title">Please Sign Up</h3>
        </div>
        <div class="panel-body">
<form action="/register" role="form" method="post"  class="form-signin col-md-12 form-group-lg">
    <h3 class="form-singin-heading" style="margin-top: 0px;">请注册</h3>
    <input type="text" placeholder="name" style="margin-bottom: 10px;" class="form-control form-control-lg" name="name">
    <input type="password" placeholder="PassWord" style="margin-bottom: 10px;" class="form-control form-control-lg" name="password">
    <input type="password" placeholder="confirm" style="margin-bottom: 10px;" class="form-control form-control-lg" name="confirm">
    <p><%= message %></p>
    <button class="btn btn-lg btn-primary btn-block">注册</button>
</form>
        </div>
    </div>
</div>
<%- include footer %>