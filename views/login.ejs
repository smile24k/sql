<%- include header %>
<div class="col-md-4 col-md-offset-4">
    <div class="login-panel panel panel-default">
        <div class="panel-heading">
            <h3 class="panel-title">Please Sign Up</h3>
        </div>
        <div class="panel-body">
        <form action="/login" role="form" method="post"  class="form-signin col-md-12 form-group-lg">
            <h3 class="form-singin-heading" style="margin-top: 0px;">欢迎登录</h3>
            <input type="text" placeholder="name" style="margin-bottom: 10px;" class="form-control form-control-lg" name="name">
            <input type="password" placeholder="PassWord" style="margin-bottom: 10px;" class="form-control form-control-lg" name="password">
            <p><%= message %></p>
            <button class="btn btn-lg btn-primary col-md-5" type="submit">登录</button>
            <a href="/register" class="btn btn-lg btn-primary col-md-offset-2 col-md-5">去注册</a>
        </form>
        </div>
    </div>
</div>
<%- include footer %>